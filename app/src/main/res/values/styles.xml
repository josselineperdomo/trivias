<resources>
    <style name="TriviaWarsTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <item name="colorAccent">@color/magenta</item>
        <item name="android:fontFamily">@font/monserrat</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="hintTextColor">@color/cyan</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxCollapsedPaddingTop">2dp</item>
    </style>

    <style name="PasswordInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="passwordToggleTint">@color/lightGray</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_input_text</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/text_input_background</item>
    </style>

    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/magenta</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OutlineRoundedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/magenta</item>
        <item name="android:textColor">@color/magenta</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TriviaWarsTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
