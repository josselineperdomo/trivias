<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/score_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trivia_cover_img"
            tools:src="@drawable/game_of_thrones_trivia_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/mtrl_card_spacing">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/mtrl_card_spacing"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/your_score"
                   android:layout_gravity="center"
                   android:textAppearance="@style/TextAppearance.TriviaWars.Headline4"/>

               <TextView
                   android:id="@+id/trivia_score"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   tools:text="12355"
                   android:layout_gravity="center"
                   android:textAppearance="@style/TextAppearance.TriviaWars.Headline6"/>

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/play_again"
                   android:layout_margin="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/play_again"
                   android:layout_gravity="center"/>

           </LinearLayout>


       </com.google.android.material.card.MaterialCardView>




    </LinearLayout>

</FrameLayout>